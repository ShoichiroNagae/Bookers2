<%= render "layouts/error", obj: @book %>
<body>
  <div><%= flash[:notice] %></div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book do |form| %>
          <!-- フォームの他の部分 -->
          <div><%= form.text_area :title %></div>
          <div><%= form.text_area :body %></div>
          <div><%= form.submit %></div>
        <% end %>
        <%= link_to 'Show', book_path(@book.id) %>
        <a class="back" href="/books">Back</a>
      </div>
    </div>
  </div>
  <footer>
    <div class="container mt-5">
  	  <div class="row">
    	  <div class="mx-auto">
    		  <p>CopyRight Infratop.inc</p>
    	  </div>
      </div>
    </div>
  </footer>
</body>