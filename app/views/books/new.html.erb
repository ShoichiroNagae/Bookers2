<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= form_with model: @books do |f| %>
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>ショップ名</h4>
      <%= f.text_field :shop_name %>
      <h4>説明</h4>
      <%= f.text_area :caption %>
      <%= f.submit '投稿' %>
      <% end %>
    </div>
    <div class="offset-md-1">
      <!--左右の中間の余白-->
    </div>
    <div class="col-md-8">
      <!--Booksの一覧-->
    </div>

  </div>
</div>